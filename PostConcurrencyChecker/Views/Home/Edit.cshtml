@model Post

<div>
    <form asp-action="edit" asp-controller="home" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <input type="hidden" name="TimeStamps" id="TimeStamps" value="@BitConverter.ToString(Model.TimeStamp)" />
        <div>
            <input type="text" name="Title" value="@Model.Title" class="input-group" />
        </div>
        <div>
            <textarea type="text" name="Description" value="" class="input-group">
@Model.Description
</textarea>
        </div>
        <input type="submit" value="Create" class="btn btn-success" />
    </form>
</div>
